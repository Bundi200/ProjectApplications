<Window x:Class="Applications.EmployeePromotion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Applications"
        mc:Ignorable="d"
        Title="EmployeePromotion" Height="900" Width="1600" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>

            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition/>
            
        </Grid.RowDefinitions>


        <TextBox Grid.Row="1" Grid.Column="0" x:Name="txt_ShowWhoPromoted"/>
        <ComboBox Grid.Column="1" Grid.Row="1" x:Name="cmb_Promotion_Selection"/>
        <ListBox Grid.Column="0" Grid.Row="2" Background="Gray" x:Name="lst_Employees"/>
        <Button Grid.Column="1" Grid.Row="2" x:Name="btn_New_Employee" Content="New Employee" Click="btn_New_Employee_Click"/>
        <Button Grid.Column="1" Grid.Row="0" x:Name="btn_Main_Menu" Content="Main Menu" Click="btn_Main_Menu_Click"/>

    </Grid>
</Window>
